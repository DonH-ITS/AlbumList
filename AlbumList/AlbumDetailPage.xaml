<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlbumList.AlbumDetailPage"
             xmlns:local="clr-namespace:AlbumList"
             x:DataType="local:Album"
             x:Name="AlbDetail"
             >

    <ContentPage.Title>
        <MultiBinding StringFormat="{}{0} - {1}">
            <Binding Path="Artist" />
            <Binding Path="Title" />
        </MultiBinding>
    </ContentPage.Title>
    <VerticalStackLayout Padding="20">
        <ActivityIndicator IsVisible="{Binding IsDownloading, Source={x:Reference AlbDetail}}" IsRunning="{Binding IsDownloading, Source={x:Reference AlbDetail}}"/>
        <Image x:Name="ImageDisplay" IsVisible="{Binding IsNotDownloading, Source={x:Reference AlbDetail}}" HeightRequest="200" WidthRequest="200" VerticalOptions="Center"/>
        <Label Text="{Binding Title}" FontSize="Large" FontAttributes="Bold"/>
            <Label Text="{Binding Artist}" FontSize="Medium"/>
            <Label Text="{Binding Year}" FontSize="Medium"/>
            <Label Text="{Binding Genre}" FontSize="Medium"/>
        <Button Text="Back" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>