<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlbumList.AlbumDetailPage"
             xmlns:local="clr-namespace:AlbumList"
             x:DataType="local:Album"
             x:Name="AlbDetail"
             >

    <ContentPage.Title>
        <MultiBinding StringFormat="{}{0} - {1}">
            <Binding Path="Artist" />
            <Binding Path="Title" />
        </MultiBinding>
    </ContentPage.Title>
    <Grid Padding="15" ColumnSpacing="30" RowSpacing="10" x:Name="MainGrid">

        <!-- Left side: Image and Info -->
        <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="10" x:Name="DetailsStack">
            <ActivityIndicator IsVisible="{Binding IsDownloading, Source={x:Reference AlbDetail}}" 
           IsRunning="{Binding IsDownloading, Source={x:Reference AlbDetail}}"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           HeightRequest="{OnPlatform WinUI=200, Android=150}"
            WidthRequest="{OnPlatform WinUI=200, Android=150}"/>
            <Image x:Name="ImageDisplay" 
           HeightRequest="{OnPlatform WinUI=200, Android=150}"
       WidthRequest="{OnPlatform WinUI=200, Android=150}"
           Aspect="AspectFit" IsVisible="{Binding IsNotDownloading, Source={x:Reference AlbDetail}}"/>
            <Label Text="{Binding Title}" FontAttributes="Bold"
       FontSize="{OnPlatform WinUI=Large, Android=Medium}" />

            <Label Text="{Binding Artist}"
       FontSize="{OnPlatform WinUI=Medium, Android=Small}" />

            <Label Text="{Binding Year}"
       FontSize="{OnPlatform WinUI=Medium, Android=Small}" />

            <Label Text="{Binding Genre}"
       FontSize="{OnPlatform WinUI=Medium, Android=Small}" />
            <Button Text="Back" Clicked="Button_Clicked" Margin="0,20,0,0"/>
        </VerticalStackLayout>

        <!-- Right side: Track Listing -->
        <VerticalStackLayout Spacing="10" x:Name="ItemCollectionViewParent">

            <Label x:Name="TrackText" Text="Track Listing" FontSize="Large" FontAttributes="Bold"/>
            <CollectionView x:Name="ItemCollectionView" ItemsSource="{Binding NumberedTracks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Label Text="{Binding}" FontSize="Small" Padding="5,3"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </Grid>
</ContentPage>